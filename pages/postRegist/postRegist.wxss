/* pages/postRegist/postRegist.wxss */
.post-title{
  display: flex;
  background-color: rgb(255, 102, 102);
  height: 80rpx;
  width:100%;
}

.text-title{
  width: 80%;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16px;
}

.btn-save::after{
  border: none;
}

.btn-save{
  width: 20%;
  color: white;
  font-size: 14px;
  background-color: rgb(255, 102, 102); 
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.info-title{
  background-color:  #ECECEC;
  height: 80rpx;
  display: flex;
  align-items: center;
  font-size: 14px;
}

.info-view{
  height: 80rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px #ECECEC solid;
}

.post-text{
  width: 220rpx;
  height:80rpx;
  display: flex;
  align-items: center;
  font-size: 14px;
  color: gray;
}

.post-input{
  width: 520rpx;
  height: 80rpx;
  border: 3px;
  font-size: 14px;
}

.input-placeholder{
  height: 80rpx;
  display: flex;
  align-items: center;
  font-size: 14px;

}