<!--Componet/select.wxml-->
<view class='mask' wx:if='{{show}}'>
 <view class='modal-content' style='height:{{height}};width:{{width}}'>
  <view class="view-title">
    <view class="text-title">
      {{title}}
    </view>
    <view class="view-btn">
      <button class="btn-cancel" bindtap="btnCancel">关闭</button>
    </view>
  </view>
  <view>
  <text>\n</text>
  </view>
  <scroll-view scroll-y class='main-content'>
   <slot></slot>
  </scroll-view>

 </view>
</view>